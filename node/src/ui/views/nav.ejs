<!-- MDC Top App Bar — https://m2.material.io/components/app-bars-top/web -->
<div class="mdc-drawer-app-content">
  <header class="mdc-top-app-bar mdc-top-app-bar--fixed" id="app-bar">
    <div class="mdc-top-app-bar__row">
      <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
        <button class="material-icons-outlined mdc-top-app-bar__navigation-icon mdc-icon-button" id="nav-toggle">menu</button>
        <span class="mdc-top-app-bar__title">ARM</span>
      </section>
      <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end" role="toolbar">
        <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
          <a href="/update_password" title="Change Password">
            <button class="material-icons-outlined mdc-top-app-bar__action-item mdc-icon-button" aria-label="Change Password">key</button>
          </a>
          <a href="/logout" title="Logout">
            <button class="material-icons-outlined mdc-top-app-bar__action-item mdc-icon-button" aria-label="Logout">logout</button>
          </a>
        <% } else { %>
          <a href="/login" title="Login">
            <button class="material-icons-outlined mdc-top-app-bar__action-item mdc-icon-button" aria-label="Login">login</button>
          </a>
        <% } %>
      </section>
    </div>
  </header>

