<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ARM - Active Rips</title>
  <link href="https://cdn.jsdelivr.net/npm/beercss@3.7.14/dist/cdn/beer.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body class="dark">
  <%- include('nav') %>
  <div class="container-fluid mt-3">
    <h3>Active Rips</h3>
    <% if (typeof jobs !== 'undefined' && jobs.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr><th>ID</th><th>Title</th><th>Type</th><th>Status</th><th>Progress</th><th>ETA</th><th>Started</th><th>Actions</th></tr>
        </thead>
        <tbody>
          <% jobs.forEach(function(job) { %>
            <tr>
              <td><a href="/jobdetail?job_id=<%= job.job_id %>"><%= job.job_id %></a></td>
              <td><%= job.title || 'Unknown' %></td>
              <td><%= job.disctype %></td>
              <td><span class="badge bg-primary"><%= job.status %></span></td>
              <td><%= job.progress || 'N/A' %></td>
              <td><%= job.eta || 'N/A' %></td>
              <td><%= new Date(job.start_time).toLocaleString() %></td>
              <td><a href="/jobdetail?job_id=<%= job.job_id %>" class="btn btn-sm btn-outline-primary">Details</a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-info">No active rips at this time.</div>
    <% } %>
  </div>
  <script type="module" src="https://cdn.jsdelivr.net/npm/beercss@3.7.14/dist/cdn/beer.min.js"></script>
  <script type="module" src="https://cdn.jsdelivr.net/npm/material-dynamic-colors@1.1.4/dist/cdn/material-dynamic-colors.min.js"></script>
</body>
</html>
