<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ARM - Active Rips</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/style.css">
  <script type="importmap">
  {
    "imports": {
      "@material/web/": "https://esm.run/@material/web@2.4.0/"
    }
  }
  </script>
  <script type="module">
    import '@material/web/all.js';
    import {styles as typescaleStyles} from '@material/web/typography/md-typescale-styles.js';
    document.adoptedStyleSheets.push(typescaleStyles.styleSheet);
  </script>
</head>
<body class="dark">
  <%- include('nav') %>
  <div class="page">
    <h5>Active Rips</h5>
    <% if (typeof jobs !== 'undefined' && jobs.length > 0) { %>
      <table class="md3-table">
        <thead>
          <tr><th>ID</th><th>Title</th><th>Type</th><th>Status</th><th>Progress</th><th>ETA</th><th>Started</th><th>Actions</th></tr>
        </thead>
        <tbody>
          <% jobs.forEach(function(job) { %>
            <tr>
              <td><a href="/jobdetail?job_id=<%= job.job_id %>"><%= job.job_id %></a></td>
              <td><%= job.title || 'Unknown' %></td>
              <td><%= job.disctype %></td>
              <td><span class="status-chip primary"><%= job.status %></span></td>
              <td><%= job.progress || 'N/A' %></td>
              <td><%= job.eta || 'N/A' %></td>
              <td><%= new Date(job.start_time).toLocaleString() %></td>
              <td><a href="/jobdetail?job_id=<%= job.job_id %>"><md-outlined-button>Details</md-outlined-button></a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="md3-alert info">
        <i class="material-icons-outlined">info</i>
        <span>No active rips at this time.</span>
      </div>
    <% } %>
  </div>
</body>
</html>
