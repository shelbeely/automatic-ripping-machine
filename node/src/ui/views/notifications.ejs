<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ARM - Notifications</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <%- include('nav') %>
  <div class="container-fluid mt-3">
    <h3>Notifications</h3>
    <button class="btn btn-sm btn-outline-danger mb-3" onclick="clearAll()">Clear All</button>
    <% if (typeof notifications !== 'undefined' && notifications.length > 0) { %>
      <% notifications.forEach(function(n) { %>
        <div class="alert alert-<%= n.seen ? 'secondary' : 'info' %> d-flex justify-content-between align-items-center">
          <div>
            <strong><%= n.title %></strong><br>
            <small><%= n.message %></small><br>
            <small class="text-muted"><%= new Date(n.trigger_time).toLocaleString() %></small>
          </div>
          <% if (!n.seen) { %>
            <button class="btn btn-sm btn-outline-primary" onclick="markRead(<%= n.id %>)">Mark Read</button>
          <% } %>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert alert-info">No notifications</div>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function markRead(id) {
      fetch('/notification/read/' + id, { method: 'POST' })
        .then(r => r.json()).then(d => { if (d.success) location.reload(); });
    }
    function clearAll() {
      fetch('/notification/clear', { method: 'POST' })
        .then(r => r.json()).then(d => { if (d.success) location.reload(); });
    }
  </script>
</body>
</html>
