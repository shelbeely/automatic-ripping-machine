<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ARM - Update Password</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/style.css">
  <script type="importmap">
  {
    "imports": {
      "@material/web/": "https://esm.run/@material/web@2.4.0/"
    }
  }
  </script>
  <script type="module">
    import '@material/web/all.js';
    import {styles as typescaleStyles} from '@material/web/typography/md-typescale-styles.js';
    document.adoptedStyleSheets.push(typescaleStyles.styleSheet);
  </script>
</head>
<body class="dark">
  <%- include('nav') %>
  <div class="page" style="max-width:400px;margin:auto;">
    <div class="md3-card">
      <h5>Update Password</h5>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="md3-alert error">
          <i class="material-icons-outlined">error</i>
          <span><%= error %></span>
        </div>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="md3-alert success">
          <i class="material-icons-outlined">check_circle</i>
          <span><%= success %></span>
        </div>
      <% } %>
      <form method="POST" action="/update_password">
        <md-outlined-text-field type="password" label="Current Password" id="old_password" name="old_password" required style="margin-bottom:16px;"></md-outlined-text-field>
        <md-outlined-text-field type="password" label="New Password" id="new_password" name="new_password" required style="margin-bottom:16px;"></md-outlined-text-field>
        <md-outlined-text-field type="password" label="Confirm New Password" id="confirm_password" name="confirm_password" required style="margin-bottom:16px;"></md-outlined-text-field>
        <md-filled-button type="submit" style="width:100%;">Update Password</md-filled-button>
      </form>
    </div>
  </div>
</body>
</html>
