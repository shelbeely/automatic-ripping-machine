<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ARM - Database</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <%- include('nav') %>
  <div class="container-fluid mt-3">
    <h3>Database</h3>
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-header"><h5>Tables</h5></div>
          <div class="card-body p-0">
            <ul class="list-group list-group-flush">
              <% if (typeof tables !== 'undefined') { %>
                <% tables.forEach(function(t) { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center <%= (typeof selectedTable !== 'undefined' && selectedTable === t.name) ? 'active' : '' %>">
                    <a href="/database?table=<%= t.name %>" class="text-decoration-none"><%= t.name %></a>
                    <span class="badge bg-secondary rounded-pill"><%= t.count %></span>
                  </li>
                <% }); %>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <% if (typeof selectedTable !== 'undefined' && selectedTable) { %>
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0"><%= selectedTable %></h5>
              <span class="badge bg-info"><%= rows.length %> rows (max 100)</span>
            </div>
            <div class="card-body p-0" style="overflow-x: auto;">
              <% if (typeof rows !== 'undefined' && rows.length > 0) { %>
                <table class="table table-striped table-sm mb-0">
                  <thead>
                    <tr>
                      <% columns.forEach(function(col) { %>
                        <th><%= col %></th>
                      <% }); %>
                    </tr>
                  </thead>
                  <tbody>
                    <% rows.forEach(function(row) { %>
                      <tr>
                        <% columns.forEach(function(col) { %>
                          <td style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= row[col] != null ? row[col] : '' %></td>
                        <% }); %>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              <% } else { %>
                <div class="p-3 text-muted">No records in this table.</div>
              <% } %>
            </div>
          </div>
        <% } else { %>
          <div class="alert alert-info">Select a table to view its contents.</div>
        <% } %>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
