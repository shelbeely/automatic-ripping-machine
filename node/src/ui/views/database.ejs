<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ARM - Database</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/style.css">
  <script type="importmap">
  {
    "imports": {
      "@material/web/": "https://esm.run/@material/web@2.4.0/"
    }
  }
  </script>
  <script type="module">
    import '@material/web/all.js';
    import {styles as typescaleStyles} from '@material/web/typography/md-typescale-styles.js';
    document.adoptedStyleSheets.push(typescaleStyles.styleSheet);
  </script>
</head>
<body class="dark">
  <%- include('nav') %>
  <div class="page">
    <h5>Database</h5>
    <div class="grid">
      <div class="s12 m3">
        <div class="md3-card">
          <h6 class="md-typescale-title-medium">Tables</h6>
          <% if (typeof tables !== 'undefined') { %>
            <% tables.forEach(function(t) { %>
              <a href="/database?table=<%= t.name %>" style="display:flex;align-items:center;padding:8px 12px;text-decoration:none;border-radius:8px;<%= (typeof selectedTable !== 'undefined' && selectedTable === t.name) ? 'background:var(--md-sys-color-primary);color:var(--md-sys-color-on-primary);' : 'color:var(--md-sys-color-on-surface);' %>">
                <span style="flex:1;"><%= t.name %></span>
                <span class="status-chip primary"><%= t.count %></span>
              </a>
            <% }); %>
          <% } %>
        </div>
      </div>
      <div class="s12 m9">
        <% if (typeof selectedTable !== 'undefined' && selectedTable) { %>
          <div class="md3-card" style="overflow-x:auto;">
            <div style="display:flex;justify-content:space-between;align-items:center;">
              <h6 class="md-typescale-title-medium"><%= selectedTable %></h6>
              <span class="status-chip primary"><%= rows.length %> rows (max 100)</span>
            </div>
            <% if (typeof rows !== 'undefined' && rows.length > 0) { %>
              <table class="md3-table">
                <thead>
                  <tr>
                    <% columns.forEach(function(col) { %>
                      <th><%= col %></th>
                    <% }); %>
                  </tr>
                </thead>
                <tbody>
                  <% rows.forEach(function(row) { %>
                    <tr>
                      <% columns.forEach(function(col) { %>
                        <td style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= row[col] != null ? row[col] : '' %></td>
                      <% }); %>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            <% } else { %>
              <p>No records in this table.</p>
            <% } %>
          </div>
        <% } else { %>
          <div class="md3-alert info">
            <i class="material-icons-outlined">info</i>
            <span>Select a table to view its contents.</span>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
