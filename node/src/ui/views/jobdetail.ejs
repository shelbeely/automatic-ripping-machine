<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Job Detail' %></title>
  <link href="https://cdn.jsdelivr.net/npm/beercss@3.7.14/dist/cdn/beer.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body class="dark">
  <%- include('nav') %>
  <div class="page">
    <h5>Job Details - #<%= job.job_id %></h5>
    <div class="grid">
      <div class="s12 m6">
        <article class="surface-container round">
          <h6>Job Info</h6>
          <table>
            <tr><td><strong>Title</strong></td><td><%= job.title || 'Unknown' %></td></tr>
            <tr><td><strong>Year</strong></td><td><%= job.year || 'N/A' %></td></tr>
            <tr><td><strong>Type</strong></td><td><%= job.disctype %></td></tr>
            <tr><td><strong>Video Type</strong></td><td><%= job.video_type || 'N/A' %></td></tr>
            <tr><td><strong>Status</strong></td><td><span class="chip small <%= job.status === 'success' ? 'tertiary' : (job.status === 'fail' ? 'error' : 'primary') %>"><%= job.status %></span></td></tr>
            <tr><td><strong>Device</strong></td><td><%= job.devpath %></td></tr>
            <tr><td><strong>Started</strong></td><td><%= new Date(job.start_time).toLocaleString() %></td></tr>
            <tr><td><strong>IMDB</strong></td><td><%= job.imdb_id || 'N/A' %></td></tr>
          </table>
        </article>
      </div>
      <div class="s12 m6">
        <% if (job.poster_url) { %>
          <img src="<%= job.poster_url %>" alt="Poster" style="max-height: 400px; max-width: 100%; border-radius: 0.5rem;">
        <% } %>
      </div>
    </div>
    <% if (typeof tracks !== 'undefined' && tracks.length > 0) { %>
      <article class="surface-container round" style="margin-top:1rem;">
        <h6>Tracks</h6>
        <table class="stripes">
          <thead>
            <tr><th>#</th><th>Length</th><th>Aspect</th><th>FPS</th><th>Main</th><th>Ripped</th><th>Filename</th></tr>
          </thead>
          <tbody>
            <% tracks.forEach(function(track) { %>
              <tr>
                <td><%= track.track_number %></td>
                <td><%= track.length %></td>
                <td><%= track.aspect_ratio %></td>
                <td><%= track.fps %></td>
                <td><%= track.main_feature ? 'Yes' : 'No' %></td>
                <td><%= track.ripped ? 'Yes' : 'No' %></td>
                <td><%= track.filename || '' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </article>
    <% } %>
    <div style="margin-top:1rem;">
      <a href="/logs?job_id=<%= job.job_id %>" class="button small border">View Logs</a>
      <a href="/" class="button small primary">Back to Home</a>
    </div>
  </div>
  <script type="module" src="https://cdn.jsdelivr.net/npm/beercss@3.7.14/dist/cdn/beer.min.js"></script>
  <script type="module" src="https://cdn.jsdelivr.net/npm/material-dynamic-colors@1.1.4/dist/cdn/material-dynamic-colors.min.js"></script>
</body>
</html>
