<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Job Detail' %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <%- include('nav') %>
  <div class="container-fluid mt-3">
    <h3>Job Details - #<%= job.job_id %></h3>
    <div class="row">
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-header"><h5>Job Info</h5></div>
          <div class="card-body">
            <table class="table">
              <tr><td><strong>Title</strong></td><td><%= job.title || 'Unknown' %></td></tr>
              <tr><td><strong>Year</strong></td><td><%= job.year || 'N/A' %></td></tr>
              <tr><td><strong>Type</strong></td><td><%= job.disctype %></td></tr>
              <tr><td><strong>Video Type</strong></td><td><%= job.video_type || 'N/A' %></td></tr>
              <tr><td><strong>Status</strong></td><td><span class="badge bg-<%= job.status === 'success' ? 'success' : (job.status === 'fail' ? 'danger' : 'primary') %>"><%= job.status %></span></td></tr>
              <tr><td><strong>Device</strong></td><td><%= job.devpath %></td></tr>
              <tr><td><strong>Started</strong></td><td><%= new Date(job.start_time).toLocaleString() %></td></tr>
              <tr><td><strong>IMDB</strong></td><td><%= job.imdb_id || 'N/A' %></td></tr>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <% if (job.poster_url) { %>
          <img src="<%= job.poster_url %>" alt="Poster" class="img-fluid" style="max-height: 400px;">
        <% } %>
      </div>
    </div>
    <% if (typeof tracks !== 'undefined' && tracks.length > 0) { %>
      <div class="card">
        <div class="card-header"><h5>Tracks</h5></div>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr><th>#</th><th>Length</th><th>Aspect</th><th>FPS</th><th>Main</th><th>Ripped</th><th>Filename</th></tr>
            </thead>
            <tbody>
              <% tracks.forEach(function(track) { %>
                <tr>
                  <td><%= track.track_number %></td>
                  <td><%= track.length %></td>
                  <td><%= track.aspect_ratio %></td>
                  <td><%= track.fps %></td>
                  <td><%= track.main_feature ? 'Yes' : 'No' %></td>
                  <td><%= track.ripped ? 'Yes' : 'No' %></td>
                  <td><%= track.filename || '' %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    <% } %>
    <a href="/logs?job_id=<%= job.job_id %>" class="btn btn-outline-secondary mt-2">View Logs</a>
    <a href="/" class="btn btn-primary mt-2">Back to Home</a>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
