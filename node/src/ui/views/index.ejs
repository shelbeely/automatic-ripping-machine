<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'ARM' %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <%- include('nav') %>
  <div class="container-fluid mt-3">
    <h2>Automatic Ripping Machine</h2>
    <div class="row mt-3">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header"><h5>Active Jobs</h5></div>
          <div class="card-body">
            <% if (typeof jobs !== 'undefined' && jobs.length > 0) { %>
              <table class="table table-striped">
                <thead>
                  <tr><th>ID</th><th>Title</th><th>Type</th><th>Status</th><th>Progress</th><th>Started</th><th>Actions</th></tr>
                </thead>
                <tbody>
                  <% jobs.forEach(function(job) { %>
                    <tr>
                      <td><a href="/jobdetail?job_id=<%= job.job_id %>"><%= job.job_id %></a></td>
                      <td><%= job.title || 'Unknown' %></td>
                      <td><%= job.disctype %></td>
                      <td><span class="badge bg-<%= job.status === 'ripping' ? 'primary' : (job.status === 'transcoding' ? 'warning' : 'info') %>"><%= job.status %></span></td>
                      <td><%= job.progress || 'N/A' %></td>
                      <td><%= new Date(job.start_time).toLocaleString() %></td>
                      <td><a href="/jobdetail?job_id=<%= job.job_id %>" class="btn btn-sm btn-outline-primary">Details</a></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            <% } else { %>
              <p class="text-muted">No active jobs</p>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header"><h5>System Info</h5></div>
          <div class="card-body">
            <% if (typeof systemInfo !== 'undefined') { %>
              <p><strong>CPU:</strong> <%= systemInfo.cpu || 'Unknown' %></p>
              <p><strong>Memory:</strong> <%= systemInfo.mem_total || 0 %> GB</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
