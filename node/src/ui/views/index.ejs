<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'ARM' %></title>
  <link href="https://cdn.jsdelivr.net/npm/beercss@3.7.14/dist/cdn/beer.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body class="dark">
  <%- include('nav') %>
  <div class="page">
    <h5>Automatic Ripping Machine</h5>
    <div class="grid">
      <div class="s12 m8">
        <article class="surface-container round">
          <h6>Active Jobs</h6>
          <% if (typeof jobs !== 'undefined' && jobs.length > 0) { %>
            <table class="stripes">
              <thead>
                <tr><th>ID</th><th>Title</th><th>Type</th><th>Status</th><th>Progress</th><th>Started</th><th>Actions</th></tr>
              </thead>
              <tbody>
                <% jobs.forEach(function(job) { %>
                  <tr>
                    <td><a href="/jobdetail?job_id=<%= job.job_id %>"><%= job.job_id %></a></td>
                    <td><%= job.title || 'Unknown' %></td>
                    <td><%= job.disctype %></td>
                    <td><span class="chip small <%= job.status === 'ripping' ? 'primary' : (job.status === 'transcoding' ? 'secondary' : 'tertiary') %>"><%= job.status %></span></td>
                    <td><%= job.progress || 'N/A' %></td>
                    <td><%= new Date(job.start_time).toLocaleString() %></td>
                    <td><a href="/jobdetail?job_id=<%= job.job_id %>" class="button small border">Details</a></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p>No active jobs</p>
          <% } %>
        </article>
      </div>
      <div class="s12 m4">
        <article class="surface-container round">
          <h6>System Info</h6>
          <% if (typeof systemInfo !== 'undefined') { %>
            <p><strong>CPU:</strong> <%= systemInfo.cpu || 'Unknown' %></p>
            <p><strong>Memory:</strong> <%= systemInfo.mem_total || 0 %> GB</p>
          <% } %>
        </article>
      </div>
    </div>
  </div>
  <script type="module" src="https://cdn.jsdelivr.net/npm/beercss@3.7.14/dist/cdn/beer.min.js"></script>
  <script type="module" src="https://cdn.jsdelivr.net/npm/material-dynamic-colors@1.1.4/dist/cdn/material-dynamic-colors.min.js"></script>
</body>
</html>
