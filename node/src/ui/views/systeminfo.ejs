<!DOCTYPE html>
<html lang="en">
<head>
  <title>ARM - System Info</title>
  <%- include('head') %>
</head>
<body class="dark">
  <%- include('nav') %>
  <div class="page">
    <h5>System Information</h5>
    <div class="md3-card">
      <div class="mdc-data-table">
        <div class="mdc-data-table__table-container">
          <table class="mdc-data-table__table" aria-label="System information">
            <tbody class="mdc-data-table__content">
              <tr class="mdc-data-table__row"><td class="mdc-data-table__cell"><strong>Hostname</strong></td><td class="mdc-data-table__cell"><%= hostname %></td></tr>
              <tr class="mdc-data-table__row"><td class="mdc-data-table__cell"><strong>Platform</strong></td><td class="mdc-data-table__cell"><%= platform %></td></tr>
              <tr class="mdc-data-table__row"><td class="mdc-data-table__cell"><strong>CPU</strong></td><td class="mdc-data-table__cell"><%= systemInfo.cpu %></td></tr>
              <tr class="mdc-data-table__row"><td class="mdc-data-table__cell"><strong>Memory</strong></td><td class="mdc-data-table__cell"><%= systemInfo.mem_total %> GB</td></tr>
              <tr class="mdc-data-table__row"><td class="mdc-data-table__cell"><strong>Uptime</strong></td><td class="mdc-data-table__cell"><%= Math.floor(uptime / 3600) %>h <%= Math.floor((uptime % 3600) / 60) %>m</td></tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>
  <script>
    var drawer = mdc.drawer.MDCDrawer.attachTo(document.querySelector('.mdc-drawer'));
    var topAppBar = mdc.topAppBar.MDCTopAppBar.attachTo(document.querySelector('.mdc-top-app-bar'));
    topAppBar.setScrollTarget(document.querySelector('.page'));
    topAppBar.listen('MDCTopAppBar:nav', function() {
      drawer.open = !drawer.open;
    });
    if (window.innerWidth >= 993) drawer.open = true;
  </script>
</body>
</html>
